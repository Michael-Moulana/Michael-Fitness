<div class="row">
        <div class="co-md-12 col-lg-12 mb-30">
            <div class="box">
                <div class="d-flex justify-content-between box-head has-operation">
                    <h4 class="title">لیست مطالب</h4>
                    <div class="operations">
                        <a href="/admin/posts/create" class="button button-primary">
                            <span><i class="zmdi zmdi-plus"></i>ایجاد مطلب جدید</span>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <th>نویسنده</th>
                                <th>تاریخ ایجاد</th>
                                <th>تعداد بازدید</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- iterate over array ( i < array.length ) -->
                            {{#each posts}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>
                                    <a href="#">{{this.title}}</a>
                                </td>
                                <td>{{this.full_name}}</td>
                                <td>{{this.created_at_persian}}</td>
                                <td>{{this.persian_views}}</td>
                                <td>
                                    <a href="/admin/posts/edit/{{this.id}}">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="/admin/posts/delete/{{this.id}}">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>